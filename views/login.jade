extends layout

block content
  div#loginContainer
    form(action="login" method="post")
      div#gcsLogo
        img(src="images/g24.png")
      div
        h3
          label Nombre de Usuario: 
          input(type="text" name="username")
      div
        h3
          label Contraseña: 
          input(type="password" name="password")
      div
        input(type="submit" value="Iniciar Sesión")
